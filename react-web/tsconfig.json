{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "module": "esnext",
    "target": "es5",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowImportingTsExtensions": true,
    "removeComments": true,
    "sourceMap": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist"]
}